[user]
    email = poslegm@gmail.com
    name = Mikhail Chugunkov
[credential]
    helper = store
[core]
    editor = vim
[color]
    ui = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[color "diff-highlight"]
    oldNormal = "red bold"
    oldHighlight = "red bold 52"
    newNormal = "green bold"
    newHighlight = "green bold 22"
[alias]
    p = pull
    pm = !git checkout master && git pull && git checkout -
    pu = push
    puo = push -u origin HEAD
    st = status
    ai = add -i
    ci = commit
    cia = commit -a
    co = checkout
    cob = checkout -b
    com = checkout master
    mm = merge master
    l = log --graph --abbrev-commit --date=relative
    la = !git l --all
    tree = !git la --oneline
