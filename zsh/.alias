alias cp="cp -i"                          # confirm before overwriting something
alias df='df -h'                          # human-readable sizes
alias free='free -m'                      # show sizes in MB
alias ports='netstat -tulpn'
alias size='du -sh'
alias tmuxon='(tmux attach || tmux new) && tdef'
alias tdef='~/.dotfiles/tmux/default-session.sh'
alias tide='~/.dotfiles/tmux/ide-session.sh'
# Because libreoffice works bad on HiDPI with default settings
alias librewriter='env SAL_USE_VCLPLUGIN=gtk libreoffice --writer &'
